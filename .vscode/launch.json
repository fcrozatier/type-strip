  "version": "0.2.0",
  "configurations": [
    {
      "name": "deno run",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "deno",
      "cwd": "${workspaceFolder}",
      "program": "${file}",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all"
      ],
      "env": {},
      "attachSimplePort": 9229,
      "experimentalNetworking": "off"
    },
    {
      "name": "deno test",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "deno",
      "cwd": "${workspaceFolder}",
      "program": "${file}",
      "runtimeArgs": [
        "test",
        "--inspect-wait",
        "--allow-all",
        "--no-check"
      ],
      "env": {},
      "attachSimplePort": 9229,
      "experimentalNetworking": "off"
    }
  ]
}
